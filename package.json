{
  "name": "animenode-js-front",
  "version": "1.0.0",
  "description": "Anime Render server written in Node.JS using server side rendering of React components.",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/nathancyam/anime-app-frontend-react"
  },
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-register --require tests/bootstrap.js tests/**/*Test.js",
    "test:tap": "mocha -R tap tests/bootstrap.js 'tests/**/*Test.js'",
    "ci:test": "./node_modules/.bin/istanbul cover npm run test:tap > test.tap && ./node_modules/.bin/istanbul report clover",
    "build:server": "NODE_ENV=production webpack --config webpack.server.config.js",
    "build:client": "TARGET=build webpack -p --config webpack.production.js",
    "build": "npm run build:client && npm run build:server",
    "build:prod": "NODE_ENV=production npm run build:client && npm run build:server",
    "start:prod": "npm run build && node server.bundle.js",
    "start:dev": "TARGET=dev webpack-dev-server --content-base . --devtool eval-source --progress --hot-only --history-api-fallback --port 8081",
    "watch:server": "TARGET=dev webpack --watch --config webpack.server.config.js",
    "watch:client": "TARGET=dev webpack --watch --progress --colors",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "serve": "TARGET=dev nodemon build/server.bundle.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.6.4",
    "babel-eslint": "^6.0.2",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.6.1",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-es2015-native-modules": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "bootswatch": "^3.3.6",
    "chai": "^3.5.0",
    "css-loader": "^0.23.1",
    "enzyme": "^2.2.0",
    "eslint": "^3.1.0",
    "express": "^4.13.3",
    "extract-text-webpack-plugin": "^2.0.0-beta.2",
    "http-proxy": "^1.11.2",
    "istanbul": "^0.4.2",
    "jsdom": "^9.4.1",
    "mocha": "^2.4.5",
    "node-libs-browser": "^1.0.0",
    "node-sass": "^3.2.0",
    "nodemon": "^1.9.1",
    "postcss-loader": "^0.9.1",
    "react-addons-test-utils": "^15.0.0",
    "react-hot-loader": "^1.2.8",
    "sass-loader": "^4.0.0",
    "sinon": "^1.17.3",
    "style-loader": "^0.13.0",
    "webpack": "^2.1.0-beta.18",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-dev-server": "^2.1.0-beta.0",
    "webpack-merge": "^0.14.0"
  },
  "dependencies": {
    "bootstrap-sass": "^3.3.5",
    "font-awesome": "^4.3.0",
    "immutable": "^3.7.4",
    "isomorphic-fetch": "^2.1.1",
    "lodash": "^4.6.1",
    "react": "^15.0.0",
    "react-bootstrap": "^0.29.5",
    "react-dom": "^15.0.0",
    "react-redux": "^4.4.0",
    "react-router": "^2.0.0",
    "react-router-redux": "^4.0.0",
    "redux": "^3.3.1",
    "redux-thunk": "^2.0.1",
    "socket.io-client": "^1.4.5"
  }
}
