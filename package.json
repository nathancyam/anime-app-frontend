{
  "name": "animenode-js-front",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "mocha tests/bootstrap.js 'tests/**/*Test.js'",
    "ci:test": "./node_modules/.bin/istanbul cover ./node_modules/.bin/mocha -- -R tap tests/bootstrap.js './tests/**/*Test.js' > test.tap && ./node_modules/.bin/istanbul report clover",
    "build:server": "webpack --config webpack.server.config.js",
    "build:client": "TARGET=build webpack -p",
    "build": "npm run build:client && npm run build:server",
    "build:prod": "NODE_ENV=production npm run build:client && npm run build:server",
    "deploy": "npm run build:prod; scp build/*.js build/*.css animeapp:/var/www/react-frontend/build",
    "start:prod": "npm run build && node server.bundle.js",
    "start:dev": "TARGET=dev webpack-dev-server --content-base build/ --devtool eval-source --progress --colors --hot --inline --history-api-fallback",
    "watch:server": "webpack --watch --config webpack.server.config.js",
    "watch:client": "TARGET=dev webpack --watch",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "serve": "TARGET=dev webpack-dev-server --host 0.0.0.0 --history-api-fallback"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.6.4",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.6.1",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "bootswatch": "^3.3.6",
    "chai": "^3.5.0",
    "css-loader": "^0.23.1",
    "enzyme": "^2.2.0",
    "eslint": "^2.2.0",
    "express": "^4.13.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "http-proxy": "^1.11.2",
    "istanbul": "^0.4.2",
    "jsdom": "^8.1.0",
    "mocha": "^2.4.5",
    "node-libs-browser": "^1.0.0",
    "node-sass": "^3.2.0",
    "nodemon": "^1.9.1",
    "postcss-loader": "^0.8.1",
    "react-addons-test-utils": "^0.14.7",
    "react-hot-loader": "^1.2.8",
    "sass-loader": "^3.1.2",
    "sinon": "^1.17.3",
    "style-loader": "^0.13.0",
    "webpack": "^1.10.1",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-dev-server": "^1.10.1",
    "webpack-merge": "^0.8.3"
  },
  "dependencies": {
    "bootstrap-sass": "^3.3.5",
    "font-awesome": "^4.3.0",
    "immutable": "^3.7.4",
    "isomorphic-fetch": "^2.1.1",
    "lodash": "^4.6.1",
    "react": "^0.14.7",
    "react-bootstrap": "^0.28.3",
    "react-dom": "^0.14.7",
    "react-redux": "^4.4.0",
    "react-router": "^2.0.0",
    "react-router-redux": "^4.0.0",
    "redux": "^3.3.1",
    "redux-thunk": "^1.0.3",
    "socket.io-client": "^1.4.5"
  }
}
